<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:keepScreenOn="true"
    android:id="@+id/main_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.fd.sampler.MainActivity"
    android:weightSum="1"
    android:background="@color/dim_foreground_disabled_material_dark">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/menuLayout"
        android:background="@color/bright_foreground_disabled_material_light"
        android:layout_weight="0.1"
        android:padding="5dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.33">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Load "
                android:id="@+id/button"
                android:background="@drawable/rounded"
                android:padding="2dp"
                android:layout_marginRight="5dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Preset1"
                android:id="@+id/presetName"
                android:layout_marginRight="50dip" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.33">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.33"></LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="110dp"
                android:layout_height="match_parent">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/prevPattern"
                    android:background="@android:drawable/ic_media_previous" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="1"
                    android:id="@+id/numPattern"
                    android:textStyle="bold" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/nextPatt"
                    android:background="@android:drawable/ic_media_next" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.33"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.33"></LinearLayout>

    </LinearLayout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragment"
        android:layout_width="570dip"
        android:layout_height="220dip"
        android:layout_weight="0.8"
        android:layout_gravity="center"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip" />
    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:indeterminate="false" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_weight="0.1"
        android:background="@color/material_grey_600"
        android:padding="5dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.33">

            <Button
                android:id="@+id/playButton"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:background="@drawable/play" />

            <Button
                android:id="@+id/pauseButton"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:background="@drawable/pause" />

            <Button
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:id="@+id/stopButton"
                android:background="@drawable/stop" />

            <ToggleButton
                style="?android:attr/buttonStyleSmall"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:id="@+id/mixerButton"
                android:textOn=""
                android:textOff=""
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@drawable/check_mixer" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.33">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.33"></LinearLayout>

            <NumberPicker
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:id="@+id/numberPicker"
                android:minHeight="40dp"
                android:minWidth="40dip"
                android:background="@drawable/rounded"
                android:gravity="center_vertical|center_horizontal" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.33"></LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.33">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Track"
                android:id="@+id/addTrackButton"
                android:background="@drawable/rounded"
                android:layout_weight="0.33" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>