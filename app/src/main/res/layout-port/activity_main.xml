<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:keepScreenOn="true"
    android:id="@+id/main_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.fd.sampler.MainActivity"
    android:weightSum="1"
    android:background="@drawable/pattern_background">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/menuLayout"
        android:background="@drawable/top_menu_background"
        android:layout_weight="0.1"
        android:padding="5dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.33">

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/saveBtn"
                android:background="@drawable/save_button"
                android:layout_marginRight="5dp" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/loadBtn"
                android:background="@drawable/load_button"
                android:padding="2dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Preset1"
                android:id="@+id/presetName"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.33">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.33"></LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="110dp"
                android:layout_height="match_parent">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/prevPattern"
                    android:background="@android:drawable/ic_media_previous" />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="1"
                    android:id="@+id/numPattern"
                    android:textStyle="bold"
                    android:textAlignment="center" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/nextPatt"
                    android:background="@android:drawable/ic_media_next" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.33"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.33">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.33"></LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.33"></LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="570dip"
        android:layout_height="15dp"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="120dip"
            android:layout_height="15dip"></LinearLayout>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="368dp"
            android:layout_height="10dp"
            android:id="@+id/progressBar"
            android:indeterminate="false"
            android:progressDrawable="@drawable/custom_progress_bar_drawable"
            android:layout_gravity="bottom" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="35dp"
            android:layout_height="15dip"></LinearLayout>
    </LinearLayout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragment"
        android:layout_width="570dip"
        android:layout_height="220dip"
        android:layout_weight="0.8"
        android:layout_gravity="center"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip" >

    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/linearLayout"
        android:layout_weight="0.1"
        android:background="@drawable/top_menu_background"
        android:padding="5dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.33">

            <Button
                android:id="@+id/playButton"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:background="@drawable/play_white" />

            <Button
                android:id="@+id/pauseButton"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:background="@drawable/pause_white" />

            <Button
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:id="@+id/stopButton"
                android:background="@drawable/stop_white" />

            <ToggleButton
                style="?android:attr/buttonStyleSmall"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:id="@+id/mixerButton"
                android:textOn=""
                android:textOff=""
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@drawable/check_mixer" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.33">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.33"></LinearLayout>

            <NumberPicker
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:id="@+id/numberPicker"
                android:minHeight="40dp"
                android:minWidth="40dip"
                android:background="@drawable/rounded_white"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginRight="5dp" />

            <NumberPicker
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:id="@+id/stepPicker"
                android:minHeight="40dp"
                android:minWidth="40dip"
                android:background="@drawable/rounded_white"
                android:gravity="center_vertical|center_horizontal"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.33"></LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.33">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.33"></LinearLayout>

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/addTrackButton"
                android:background="@drawable/add_track_button" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.33"></LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>